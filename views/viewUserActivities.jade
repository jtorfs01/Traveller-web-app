extends layout

block content

    each item, i in activities

        .card.large
            .card-image.waves-effect.waves-block.waves-light
                div(id= item.ACTIVITY_ID)
            .card-content
                span.card-title.activator.grey-text.text-darken-4
                    p.light= item.NAME
                    a(href='#', id='edit', class='edit').i.material-icons.right edit

                p.light=item.DESCRIPTION
                br
                p.dark Pick-up location:
                p.light=item.STREET + ', ' + item.CITY

                select.browser-default
                    each item2, i2 in activityDates
                        if(item.ACTIVITY_ID == item2.ACTIVITY_ID)
                            option(value= item2.CALENDAR_ID)= item2.DATE_FROM

         script.
             $(document).ready(function () {
                 $('select').material_select();
                 $('select').material_select('update');


                 $('a.edit').click(function () {

                 var change = $(this).parent().parent();
                     change.find('label').hide();
                     change.find('input[type="text"]').show().focus();
                     });

                     $('input[type=text]').focusout(function () {
                         var change = $(this).parent();
                         $(this).hide();
                         change.find('label').show();
                 });
             });

      p
          a#login-button.btn-large.waves-effect.waves-light.teal.lighten-1(href='/OrganizeActivity') Create new activity




