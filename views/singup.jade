extends layout

block content

    .row
        form(action='/createAccount' method='post' id='createAccount').col.s12
            .row
                .input-field.col.s6
                    input#icon_prefix.validate(type='text', name='firstName')
                    label(for='icon_prefix') First Name
            .row
                .input-field.col.s6
                    input#last_name.validate(type='text', name='lastName')
                    label(for='last_name') Last Name
            .row
                .input-field.col.s6
                    input#password.validate(type='password', name='password')
                    label(for='password') Password
            .row
                .input-field.col.s6
                    input#repeatPassword.validate(type='password', name='repeatePassword')
                    label(for='repeatPassword') Repeat Password
            .row
                .input-field.col.s6
                    input#email.validate(type='email', name='email')
                    label(for='email') Email
            .row
                p
                    button.btn-large.waves-effect.waves-light.teal.lighten-1(type='submit') Sign-up
                p
                    a(href='/login' class='loginHref') Already have an Account? Log in here!
                   // a(href='/singup') Already have an Account? Log in here!
